		} else if (gr.study == '6bd1e198db94c450b86770c08c96198c'){ //If Study is Rasopothy
			color = '#C30023';
		}

		try{

			$$('.annotation-row').each(function(elmt) {
				elmt.style.backgroundColor = color;
				
			});
			
		} catch(err){}
	});
}]]></script>
