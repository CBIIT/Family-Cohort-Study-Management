	var tmp = {};
	tmp.first_name = 'James';
	tmp.last_name = 'Smith';
	tmp.sys_id = 'f46149a8db940850b86770c08c9619ba';
	tmp.fhq = 1;
	tmp.iiq = 1;
	tmp.iiq_sys_id = '8d0331e4db980850b86770c08c96193b';
	data.records.push(tmp);
	tmp = {};
	tmp.first_name = 'John';
	tmp.last_name = 'Smith';
	tmp.sys_id = '3b218d68db940850b86770c08c9619f2';
	tmp.fhq = 0;
	tmp.iiq = 1;
	tmp.iiq_sys_id = '97901fbfdb684c1054d8ff621f9619aa';
	data.records.push(tmp);
	tmp = {};
	tmp.first_name = 'Jack';
	tmp.last_name = 'Smith';
	tmp.sys_id = 'd5aa4963dbb0041054d8ff621f9619b2';
	tmp.fhq = 1;
	tmp.iiq = 0;
	tmp.iiq_sys_id = 'ad5c782fdb30041054d8ff621f961929';
	data.records.push(tmp);
	data.showConsent = true;
	data.showMRR = true;
	
	//determine if we need to display consent form or not	
	//this id should be set when the user select LI-F study
	var study_id = '5bf67315db3f3f4054d8ff621f961968';
	var gr = new GlideRecord('x_naci_family_coho_fcsms_consent');
	gr.addQuery('study', study_id);
	gr.addQuery('consent_by', user_id);
	gr.query();
	if(gr.getRowCount() > 0){
		data.showConsent = false;
	}else{
		data.showConsent = true;
	} 
	
	//determine if we need to display MRR consent or not
	var gr1 = new GlideRecord('x_naci_family_coho_fcsms_mrr_consent');
	gr1.addQuery('study', study_id);
	gr1.addQuery('consent_by', user_id);
	gr1.query();
	if(gr1.getRowCount() > 0){
		data.showMRR = false;
	}else{
		data.showMRR = true;
	} 
	
	//deterime which screener form should be displayed for logged in user.
	c.data.instake_sys_id = '';
	
	
})();]]></script>
